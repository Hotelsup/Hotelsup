var maincolor = document.querySelectorAll('ul.wpc-popover-controls-content')[0].querySelectorAll('li')
var maincolor_num = maincolor.length;

for (var i=0;i < maincolor_num;i++) {
    maincolor[i].addEventListener('click', function(){
        // Fit //
            var fitSection = document.querySelectorAll('ul.wpc-popover-controls-content')[1].querySelectorAll('li');
            // หาจำนวน List ของแต่ละผ้า //
            var fitSection_num = fitSection.length;
            var fitSection_listNum = fitSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * fitSection_listNum
            var last = (i * fitSection_listNum) + fitSection_listNum - 1
            for (var n=0; n < fitSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[1].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[1].querySelectorAll('li')[n].style.display = "none";
                }
            }  
            
        // Cuff // >> ต้องแยก by Fitting ด้วย
            var cuffSection = document.querySelectorAll('ul.wpc-popover-controls-content')[3].querySelectorAll('li');
            var cuffSection_num = cuffSection.length
            var cuffSection_listNum = cuffSection_num / fitSection_num
            // Loop by Fitting //
            for (var n=0; n < fitSection_num; n++) {
                fitSection[n].addEventListener('click', function(){
                    var start = n * cuffSection_listNum
                    var last = (n * cuffSection_listNum) + cuffSection_listNum - 1
                    for (var s=0; s < cuffSection_num; s++) {
                        if (s >= start && s <= last) {
                            document.querySelectorAll('ul.wpc-popover-controls-content')[3].querySelectorAll('li')[s].style.display = "block";
                        } else {
                            document.querySelectorAll('ul.wpc-popover-controls-content')[3].querySelectorAll('li')[s].style.display = "none";
                        }
                    }
                });
            }

        // Waistband >> Size //
            var waist_SizeSection = document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[0].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var waist_SizeSection_num = waist_SizeSection.length
            var waist_SizeSection_listNum = waistSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * waist_SizeSection_listNum
            var last = (i * waist_SizeSection_listNum) + waist_SizeSection_listNum - 1
            for (var n=0; n < waist_SizeSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[0].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[0].querySelectorAll('li')[n].style.display = "none";
                }
            }
        
            // Waistband >> Extend //
            var waist_ExtendSection = document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[1].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var waist_ExtendSection_num = waist_ExtendSection.length
            var waist_ExtendSection_listNum = waist_ExtendSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * waist_ExtendSection_listNum
            var last = (i * waist_ExtendSection_listNum) + waist_ExtendSection_listNum - 1
            for (var n=0; n < waist_ExtendSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[1].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[1].querySelectorAll('li')[n].style.display = "none";
                }
            }

        // Waistband >> Edge //
            var waist_EdgeSection = document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[2].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var waist_EdgeSection_num = waist_EdgeSection.length
            var waist_EdgeSection_listNum = waist_EdgeSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * waist_EdgeSection_listNum
            var last = (i * waist_EdgeSection_listNum) + waist_EdgeSection_listNum - 1
            for (var n=0; n < waist_EdgeSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[2].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[2].querySelectorAll('li')[n].style.display = "none";
                }
            }


        // Waistband >> Belt Loop //
            var waist_BeltSection = document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[3].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var waist_ฺBeltSection_num = waist_BeltSection.length
            var waist_BeltSection_listNum = waist_ฺBeltSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * waist_BeltSection_listNum
            var last = (i * waist_BeltSection_listNum) + waist_BeltSection_listNum - 1
            for (var n=0; n < waist_ฺBeltSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[3].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[3].querySelectorAll('li')[n].style.display = "none";
                }
            }

        // Waistband >> Ticket Pocket //
            var waist_TicketSection = document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[4].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var waist_ฺTicketSection_num = waist_TicketSection.length
            var waist_TicketSection_listNum = waist_ฺTicketSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * waist_TicketSection_listNum
            var last = (i * waist_TicketSection_listNum) + waist_TicketSection_listNum - 1
            for (var n=0; n < waist_ฺTicketSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[4].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[4].querySelectorAll('li')[4].querySelectorAll('li')[n].style.display = "none";
                }
            }
        
        // Pleat //
            var pleatSection = document.querySelectorAll('ul.wpc-popover-controls-content')[5].querySelectorAll('li');
            // หาจำนวน List ของแต่ละผ้า //
            var pleatSection_num = pleatSection.length;
            var pleatSection_listNum = pleatSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * pleatSection_listNum
            var last = (i * pleatSection_listNum) + pleatSection_listNum - 1
            for (var n=0; n < pleatSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[5].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[5].querySelectorAll('li')[n].style.display = "none";
                }
            }

        // Back Pocket >> Placement //
            var backPocket_placeSection = document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[0].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var backPocket_placeSection_num = backPocket_placeSection.length
            var backPocket_placeSection_listNum = backPocket_placeSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * backPocket_placeSection_listNum
            var last = (i * backPocket_placeSection_listNum) + backPocket_placeSection_listNum - 1
            for (var n=0; n < backPocket_placeSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[0].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[0].querySelectorAll('li')[n].style.display = "none";
                }
            }

        // Back Pocket >> Style //
            var backPocket_styleSection = document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[1].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var backPocket_styleSection_num = backPocket_styleSection.length
            var backPocket_styleSection_listNum = backPocket_styleSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * backPocket_styleSection_listNum
            var last = (i * backPocket_styleSection_listNum) + backPocket_styleSection_listNum - 1
            for (var n=0; n < backPocket_styleSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[1].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[1].querySelectorAll('li')[n].style.display = "none";
                }
            }

        // Back Pocket >> Button // 
            var backPocket_buttonSection = document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[2].querySelectorAll('li')
            // หาจำนวน List ของแต่ละผ้า //
            var backPocket_buttonSection_num = backPocket_buttonSection.length
            var backPocket_buttonSection_listNum = backPocket_buttonSection_num / maincolor_num

            // หาตำแหน่งที่ต้องใส่ none/block //
            var start =  i * backPocket_buttonSection_listNum
            var last = (i * backPocket_buttonSection_listNum) + backPocket_buttonSection_listNum - 1
            for (var n=0; n < backPocket_buttonSection_num ; n++) {
                if (n >= start && n <= last) {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[2].querySelectorAll('li')[n].style.display = "block";
                } else {
                    document.querySelectorAll('ul.wpc-popover-controls-content')[7].querySelectorAll('li')[2].querySelectorAll('li')[n].style.display = "none";
                }
            }

    }); 
}
